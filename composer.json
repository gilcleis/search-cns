{
    "name": "gilclei/search-cns",
    "description": "Projeto de uma biblioteca para consultar dos dados do usuário SUS na base de dados do Datasus",
    "homepage": "https://github.com/gilclei/search-cns",
    "keywords": [
        "php",
        "sus",
        "cartao sus",
        "consulta",
        "cns",
        "datasus",
        "webservice",
        "client",
        "cns"
    ],
    "authors": [
        {
            "name": "Gilclei Araujo",
            "email": "gilclei@gmail.com",
            "role": "Developer"
        }
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-0": {
            "Search": "src/"
        },
        "psr-4": {
            "Gilclei\\SearchCns\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.0.0",
        "gilclei/check-cpf": "^1.0",
        "gilclei/check-cns": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "=8.3.5",
        "squizlabs/php_codesniffer": "3.5.*",
        "marcocesarato/php-conventional-changelog": "^1.15"
    },
    "scripts": {
        "psr12": "phpcs --standard=PSR12 --colors src/",
        "psr12-fix-src": "phpcbf --standard=PSR12 --colors src/",
        "psr12-fix-tests": "phpcbf --standard=PSR12 --colors tests/",
        "test": "phpunit --colors=always tests/",
        "psr12-fix": [
            "@psr12-fix-src",
            "@psr12-fix-tests"
        ],
        "check": [
            "@psr12-fix",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "psr12": "Valida se o projeto está seguindo os padrões da PSR-12",
        "psr12-fix": "Executa pequenas correções automáticas para padronização na PSR-12",             
        "check": "Executa as verificações do código em sequência (Phan, PSR12-FIX, PSR12)"
    }
}
